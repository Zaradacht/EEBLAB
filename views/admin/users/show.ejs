<% include ../partials/header %>


<div class="container">
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
            <div class="jumbotron">
                <% if(user) { %>
                <h1>This is <%=user.username%>'s page</h1>
                <% } %>
                <p>This is the show page </p>
            </div>

            <table class="table table-hover table-bordered">
                <thead>
                    <th>Username</th>
                    <th>ID</th>
                    <th class="warning">Action</th>
                </thead>
                <tbody>
                    <% if(user) { %>
                    <tr>
                        <td><%=user.username%></td>
                        <td><%= user.id%></td>
                        <td class="warning">
                            <a href="/admins/users/<%=user.id%>/edit">Edit</a>
                            <a href="/admins/users/<%=user.id%>">Delete</a>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="col-lg-1"></div>
    </div>
</div>

<% include ../partials/footer %>