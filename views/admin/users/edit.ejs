<% include ../partials/header %>

<h1 style="text-align: center">Edit page</h1>
<div style="width: 30%; margin: 25px auto;">
    <form action="/admins/users/<%=user._id%>?_method=PUT" method="post">
        <div class="form-group">
            <input class="form-control" type="text" name="username" placeholder="username" value="<%=user.username%>"
                disabled />
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="password" />
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="password2" placeholder="password again.." />
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">EDIT</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>